<Page
    x:Class="BassClefStudio.RssReader.Uwp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BassClefStudio.RssReader.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:helpers="using:BassClefStudio.RssReader.Uwp.Helpers" 
    xmlns:model="using:BassClefStudio.RssReader.Model" 
    xmlns:winui="using:Microsoft.UI.Xaml.Controls" 
    xmlns:converters="using:BassClefStudio.UWP.Core.Converters" 
    xmlns:system="using:System"
    mc:Ignorable="d"
    Background="{ThemeResource SystemChromeMediumColor}">
    <Page.Resources>
        <converters:VisibilityConverter x:Key="NullConverter" CheckFor="{x:Null}" IsEqual="False"/>
        <x:Boolean x:Key="True">TRUE</x:Boolean>
        <converters:VisibilityConverter x:Key="BoolConverter" CheckFor="{StaticResource True}" IsEqual="True"/>
        <converters:VisibilityConverter x:Key="InverseBoolConverter" CheckFor="{StaticResource True}" IsEqual="False"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <winui:ProgressBar
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            IsIndeterminate="True"
            Visibility="{x:Bind ViewModel.RssService.Loading, Mode=OneWay}"/>
        <controls:ListDetailsView
            Grid.Row="1"
            ItemsSource="{x:Bind FeedView, Mode=OneWay}"
            Background="{x:Null}"
            BackButtonBehavior="Inline"
            SelectionChanged="FeedSelectionChanged">
            <controls:ListDetailsView.ListCommandBar>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton 
                            Icon="Refresh"
                            Label="Refresh"
                            Click="RefreshClick"/>
                        <AppBarButton 
                            Icon="Setting" 
                            Label="Settings"
                            Click="SettingsClick"/>
                    </CommandBar.PrimaryCommands>
                </CommandBar>
            </controls:ListDetailsView.ListCommandBar>
            <controls:ListDetailsView.NoSelectionContentTemplate>
                <DataTemplate>
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource TextStyleLargeFontSize}"
                        FontWeight="SemiLight"
                        Text="Select an article to start reading."
                        TextWrapping="WrapWholeWords"/>
                </DataTemplate>
            </controls:ListDetailsView.NoSelectionContentTemplate>
            <controls:ListDetailsView.ItemTemplate>
                <DataTemplate x:DataType="model:RssArticle">
                    <Grid
                        Padding="8"
                        RowSpacing="4"
                        ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Rectangle
                            Fill="{ThemeResource SystemAccentColor}"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Visibility="{x:Bind Read, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                            Width="2"
                            RadiusX="1"
                            RadiusY="1"
                            Margin="0,2"/>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource BaseTextBlockStyle}"
                            Text="{x:Bind Title}"/>
                        <TextBlock 
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind Subscription.Name}"/>
                    </Grid>
                </DataTemplate>
            </controls:ListDetailsView.ItemTemplate>
            <controls:ListDetailsView.DetailsTemplate>
                <DataTemplate x:DataType="model:RssArticle">
                    <Grid 
                        RowSpacing="4" 
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock 
                            Grid.Row="0"
                            Margin="8,0"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind Title}"/>
                        <Grid
                            Grid.Row="1"
                            Margin="8,0"
                            HorizontalAlignment="Stretch"
                            ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center" 
                                Style="{StaticResource BaseTextBlockStyle}"
                                Text="{x:Bind PostedDate}"/>
                            <TextBlock 
                                Grid.Row="0"
                                Grid.Column="1"
                                VerticalAlignment="Center" 
                                Style="{StaticResource BaseTextBlockStyle}"
                                Text="·"/>
                            <ItemsControl
                                Grid.Row="1"
                                Grid.ColumnSpan="4"
                                ItemsSource="{x:Bind Links}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="system:String">
                                        <HyperlinkButton
                                            VerticalAlignment="Center" 
                                            NavigateUri="{x:Bind}">
                                            <StackPanel 
                                                Spacing="4"
                                                Orientation="Horizontal">
                                                <SymbolIcon 
                                                    VerticalAlignment="Center" 
                                                    Symbol="Link"/>
                                                <TextBlock 
                                                    VerticalAlignment="Center" 
                                                    Text="{x:Bind}"/>
                                            </StackPanel>
                                        </HyperlinkButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <Rectangle
                            Grid.Row="2"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            Margin="8,0"
                            Fill="{ThemeResource SystemBaseHighColor}"/>
                        <WebView
                            Grid.Row="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            DefaultBackgroundColor="Transparent"
                            NavigationCompleted="WebView_NavigationCompleted"
                            Visibility="{x:Bind Body, Converter={StaticResource NullConverter}}"
                            helpers:WebViewExtention.HtmlSource="{x:Bind Body}"/>
                    </Grid>
                </DataTemplate>
            </controls:ListDetailsView.DetailsTemplate>
        </controls:ListDetailsView>
    </Grid>
</Page>
